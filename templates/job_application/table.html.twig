<table class="table text-center">
    <thead>
    <tr>
        <th class="active text-center">{{ 'resume'|trans }}</th>
        <th class="active text-center">{{ 'description'|trans }}</th>
        <th class="active text-center">{{ 'company.name'|trans }}</th>
        <th class="active text-center">{{ 'viewed'|trans }}</th>
    </tr>
    </thead>

    <tbody>
    {% for jobApplication in jobApplications %}
        <tr>
            <td>
                <a href="{{ path('resume_show', {id:jobApplication.resume.id}) }}">
                    {{ jobApplication.resume.title }}
                </a>
            </td>
            <td>{{ jobApplication.job.description }}</td>
            <td>
                <a href="{{ path('company_show', {id:jobApplication.job.company.id}) }}">
                    {{ jobApplication.job.company.name }}
                </a>
            </td>
            <td>{% if jobApplication.viewed %} {{ 'true'|trans }} {% else %} {{ 'false'|trans }} {% endif %}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>