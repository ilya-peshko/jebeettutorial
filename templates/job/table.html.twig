<table class="table text-center">
    <thead>
    <tr>
        <th class="active text-center">{{ 'location'|trans }}</th>
        <th class="active text-center">{{ 'position'|trans }}</th>
        <th class="active text-center">{{ 'company'|trans }}</th>
    </tr>
    </thead>

    <tbody>
    {% for job in jobs %}
        <tr>
            <td>{{ job.location }}</td>
            <td>
                <a href="{{ path('job_show', {id: job.id}) }}">
                    {{ job.position }}
                </a>
            </td>
            <td>{{ job.company.name }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>