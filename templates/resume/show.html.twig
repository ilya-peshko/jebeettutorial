{% extends 'base.html.twig' %}

{% block body %}

    {% if app.user and (app.user is same as(resume.user)) %}
        {% include 'resume/control_panel.html.twig' with {
            'resume': resume,
            'deleteForm': deleteForm,
        } only %}
    {% endif %}

    <div class="media-body">
        <div class="row">
            <div class="col-sm-10">
                <h3 class="media-heading"><strong>{{ resume.title }}</strong></h3>
            </div>

            <div class="col-sm-2">
                <i class="pull-right"> Date of birthday {{ resume.dateOfBirthday|date('m/d/Y') }}</i>
            </div>
        </div>

        <p>
            <strong>{{ resume.name }}</strong>
            <strong>{{ resume.surname }}</strong>
            <small> - <i>{{ resume.gender }}</i></small>
        </p>

        <p>{{ resume.aboutMe|nl2br }}</p>

        <p>{{ resume.cityOfResidence }}</p>

        <div class="row">
            <div class="col-sm-12 text-right">
                <a class="btn btn-default" href="{{ path('resume_list') }}">
                    <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                    Back to list
                </a>
            </div>
        </div>
    </div>
{% endblock %}